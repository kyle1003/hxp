<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hurry.data.mapper.inventory.InventoryMapper">

	<resultMap id="InventoryResultMap" type="Inventory">
		<id property="id" column="id" />
		<result property="userId" column="userId"/>
		<result property="storeId" column="storeId"/>
		<association property="inventoryGoods" column="id" select="cn.hurry.data.mapper.inventory.InventoryGoodsMapper.selectInventoryGoodsByInventoryId"></association>
		<collection property="user" column="userId" ofType="User" select="cn.hurry.data.mapper.user.UserMapper.selectUserById"></collection>
		<collection property="store" column="storeId" ofType="Store" select="cn.hurry.data.mapper.store.StoreMapper.selectStoreById"></collection>
	</resultMap>

	<sql id="where">
			<if test="code != null">
				AND (id LIKE CONCAT(CONCAT('%',#{id},'%')))  
			</if>
			<if test="createDateStart!=null">
				AND  createDate &gt;=#{createDateStart}
			</if>
			<if test="createDateEnd!=null">
				AND  createDate &lt;=#{createDateEnd}
			</if>
			<if test="storeId != null">
				AND  storeId =#{storeId}
			</if>
			<if test="status != null">
				AND  status =#{status}
			</if>
			<if test="userId != null">
				AND  userId =#{userId}
			</if>
	</sql>

	<insert id="insertInventory" parameterType="Inventory">
		INSERT INTO inventory
		(code,createDate,userId,storeId,status)
		VALUES
		(#{code},#{createDate},#{userId},#{storeId},#{status})
	</insert>

	<update id="updateInventory" parameterType="Inventory">
		UPDATE inventory
		<set>
			<if test="userId != 0">
				userId=#{userId},
			</if>
			<if test="storeId != 0">
				storeId=#{storeId},
			</if>
			status=#{status}
		</set>
		WHERE id=#{id}
	</update>

	<delete id="deleteInventory" parameterType="Inventory">
		DELETE FROM inventory WHERE id = #{id}
	</delete>

	<select id="selectInventoryById" parameterType="int" resultMap="InventoryResultMap">
		SELECT * FROM inventory WHERE id = #{id}
	</select>

	<select id="selectMaxCode" parameterType="int" resultType="string">
		SELECT MAX(code) FROM inventory
	</select>

	<select id="selectLastIndexId" parameterType="int" resultType="int">
		SELECT LAST_INSERT_ID()
	</select>
	
	<select id="countInventoryByMap" parameterType="map" resultType="int">
		SELECT count(id) FROM inventory
		<where>
			<include refid="where"/>
		</where>
	</select>
	
	<select id="selectInventoryByMap" parameterType="map" resultMap="InventoryResultMap">
		SELECT * FROM inventory
		<where>
			<include refid="where"/>
		</where>
		<if test="sortField!=null and sortField!=''">
			ORDER BY ${sortField} ${sortOrder}
		</if>
		<if test="sortField==null or sortField==''">
			ORDER BY id DESC
		</if>
		<if test="firstResult != null">
			<if test="maxResults != null">
				LIMIT ${firstResult},${maxResults}
			</if>
		</if>
	</select>
</mapper> 