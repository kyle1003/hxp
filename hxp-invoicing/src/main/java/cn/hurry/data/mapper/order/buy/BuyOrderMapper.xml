<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hurry.data.mapper.order.buy.BuyOrderMapper">

	<resultMap id="BuyOrderResultMap" type="BuyOrder">
		<id property="id" column="id" />
		<result property="storeId" column="storeId"/>
		<association property="orderGoods" column="id" select="cn.hurry.data.mapper.order.buy.BuyOrderGoodsMapper.selectBuyOrderGoodsByOrderId"></association>
		<collection property="user" column="userId" ofType="User" select="cn.hurry.data.mapper.user.UserMapper.selectUserById"></collection>
		<collection property="store" column="storeId" ofType="Store" select="cn.hurry.data.mapper.store.StoreMapper.selectStoreById"></collection>
	</resultMap>

	<sql id="selectWhere">
		<if test="status != null">
			AND buy_order.status=#{status}
		</if>
		<if test="id!=null">
			AND (buy_order.id LIKE CONCAT(CONCAT('%',#{id},'%')))  
		</if>
		<if test="createDateStart!=null">
			AND  buy_order.createDate &gt;=#{createDateStart}
		</if>
		<if test="createDateEnd!=null">
			AND  buy_order.createDate &lt;=#{createDateEnd}
		</if>
		<if test="storeId != null">
			AND  buy_order.storeId =#{storeId}
		</if>
		<if test="userId != null">
			AND  buy_order.userId =#{userId}
		</if>
		<if test="goodsId != null">
			AND  buy_order_goods.`goodsId` =#{goodsId}
		</if>
	</sql>

	<insert id="insertBuyOrder" parameterType="BuyOrder">
		INSERT INTO `buy_order` 
		(id,storeId,remark,createDate,userId,status,type,pay)
		VALUES
		(#{id},#{storeId},#{remark},#{createDate},#{userId},#{status},#{type},#{pay})
	</insert>

	<update id="updateBuyOrder" parameterType="BuyOrder">
		UPDATE `buy_order` <set>
			<if test="remark!=null">
				remark=#{remark},
			</if>
			<if test="userId !=0">
				userId=#{userId},
			</if>
			<if test="storeId !=0">
				storeId=#{storeId},
			</if>
			status=#{status},
			pay=#{pay},
		</set> 
		WHERE id=#{id}
	</update>

	<delete id="deleteBuyOrder" parameterType="BuyOrder">
		DELETE FROM `buy_order` WHERE id = #{id}
	</delete>

	<select id="selectBuyOrderById" parameterType="String" resultMap="BuyOrderResultMap">
		SELECT * FROM `buy_order` WHERE id = #{id}
	</select>

	<select id="selectBuyOrderByMap" parameterType="map" resultMap="BuyOrderResultMap">
		SELECT DISTINCT buy_order.* FROM `buy_order`
		LEFT JOIN buy_order_goods ON buy_order_goods.`orderId`=buy_order.`id`
		<where>
			<include refid="selectWhere"/>
		</where>
		<if test="sortField!=null and sortField!=''">
			ORDER BY ${sortField} ${sortOrder}
		</if>
		<if test="sortField==null or sortField==''">
			ORDER BY id DESC
		</if>
		<if test="firstResult != null">
			<if test="maxResults != null">
				LIMIT ${firstResult},${maxResults}
			</if>
		</if>
	</select>
	
	<select id="countBuyOrderByMap" parameterType="map" resultType="int">
		SELECT count(id) as number FROM `buy_order`
		<where>
			<include refid="selectWhere"/>
		</where>
	</select>
	
	<select id="sumBuyOrderByMap" parameterType="map" resultType="double">
		SELECT sum(pay) FROM `buy_order`
		<where>
			<include refid="selectWhere"/>
		</where>
		<if test="sortField!=null and sortField!=''">
			ORDER BY ${sortField} ${sortOrder}
		</if>
		<if test="sortField==null and sortField==''">
			ORDER BY id DESC
		</if>
		<if test="firstResult != null">
			<if test="maxResults != null">
				LIMIT ${firstResult},${maxResults}
			</if>
		</if>
	</select>
	
	<select id="selectMaxId" resultType="string">
		SELECT MAX(id) AS maxId FROM `buy_order`
		WHERE DATEDIFF(NOW(),createDate)=0
	</select>
	
</mapper> 