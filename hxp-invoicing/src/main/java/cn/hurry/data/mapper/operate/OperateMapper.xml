<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 操作类映射配置文件 -->
<mapper namespace="cn.hurry.data.mapper.operate.OperateMapper">

	<resultMap id="OperateMap" type="Operate" >
		<id property="id" column="id" />
	</resultMap>
	
	<select id="selectAllOperaMenuData" resultMap="OperateMap">
		SELECT * FROM operate
	</select>
	
	<select id="selectOperateByManagerGroupeId" parameterType="int" resultMap="OperateMap">
		SELECT operate.*
		FROM operate 
		LEFT JOIN operate_group  ON operate.id=operate_group.operateId 
		LEFT JOIN manager_group  ON operate_group.managerGroupId=manager_group.id
		WHERE manager_group.id=#{id};
	</select>
</mapper> 