<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

	<!-- 用户类映射配置文件 -->
<mapper namespace="cn.hurry.data.mapper.unit.UnitMapper">

	<resultMap id="UnitResultMap" type="Unit">
		<id property="id" column="id" />
	</resultMap>

	<insert id="insertUnit" parameterType="Unit">
		INSERT INTO unit (name)VALUES(#{name})
	</insert>

	<update id="updateUnit" parameterType="Unit">
		UPDATE unit set name=#{name} WHERE id=#{id}
	</update>

	<delete id="deleteUnit" parameterType="Unit">
		DELETE FROM unit WHERE id = #{id}
	</delete>

	<select id="selectUnitById" parameterType="int" resultMap="UnitResultMap">
		SELECT * FROM unit WHERE id = #{id}
	</select>

	<select id="selectUnitByMap" parameterType="map" resultMap="UnitResultMap">
		SELECT * FROM unit
	</select>
</mapper> 