<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hurry.data.mapper.order.sell.SellOrderGoodsMapper">

	<resultMap id="SellOrderGoodsResultMap" type="SellOrderGoods">
		<id property="id" column="id" />
		<result property="goodsId" column="goodsId"/>
		<result property="orderId" column="orderId"/>
		<collection property="goods" column="goodsId" ofType="Goods" select="cn.hurry.data.mapper.goods.GoodsMapper.selectGoodsById"></collection>
		<collection property="order" column="orderId" ofType="Order" select="cn.hurry.data.mapper.order.sell.SellOrderMapper.selectSellOrderById"></collection>
	</resultMap>

	<sql id="where">
			<if test="goodsId != null">
				AND sell_order_goods.goodsId=#{goodsId}
			</if>
			<if test="surplusNumberNot != null">
				AND sell_order_goods.surplusNumber!=#{surplusNumberNot}
			</if>
			<if test="status != null">
				AND sell_order.status=#{status}
			</if>
			<if test="storeId != null">
				AND sell_order.storeId=#{storeId}
			</if>
			<if test="userId != null">
				AND  sell_order.userId =#{userId}
			</if>
			<if test="createDateStart!=null">
				AND sell_order.createDate &gt;=#{createDateStart}
			</if>
			<if test="createDateEnd!=null">
				AND sell_order.createDate &lt;=#{createDateEnd}
			</if>
			<if test="orderId !=null">
				AND sell_order_goods.orderId=#{orderId}
			</if>
	</sql>

	<insert id="insertSellOrderGoods" parameterType="SellOrderGoods">
		INSERT INTO sell_order_goods (goodsId,orderId,price,number)VALUES(#{goodsId},#{orderId},#{price},#{number})
	</insert>

	<update id="updateSellOrderGoods" parameterType="SellOrderGoods">
		UPDATE sell_order_goods SET price=#{price},number=#{number} WHERE id=#{id}
	</update>

	<delete id="deleteSellOrderGoods" parameterType="SellOrderGoods">
		DELETE FROM sell_order_goods WHERE id = #{id}
	</delete>

	<select id="selectSellOrderGoodsById" parameterType="int" resultMap="SellOrderGoodsResultMap">
		SELECT * FROM sell_order_goods WHERE id = #{id}
	</select>
	
	<select id="selectSellOrderGoodsByOrderId" parameterType="string" resultMap="SellOrderGoodsResultMap">
		SELECT * FROM sell_order_goods WHERE orderId = #{id}
	</select>

	<select id="selectSellOrderGoodsByMap" parameterType="map" resultMap="SellOrderGoodsResultMap">
		SELECT * FROM sell_order_goods
		LEFT JOIN sell_order ON sell_order.`id`=sell_order_goods.`orderId`
		<where>
			<include refid="where"/>
		</where>
		<if test="sortField!=null and sortField!=''">
			ORDER BY ${sortField} ${sortOrder}
		</if>
		<if test="sortField==null or sortField==''">
			ORDER BY sell_order_goods.orderId DESC
		</if>
		<if test="firstResult != null">
			<if test="maxResults != null">
				LIMIT ${firstResult},${maxResults}
			</if>
		</if>
	</select>
	
	<select id="countSellOrderGoodsByMap" parameterType="map" resultType="int">
		SELECT count(sell_order_goods.id) FROM sell_order_goods 
		LEFT JOIN sell_order ON sell_order.`id`=sell_order_goods.`orderId`
		<where>
			<include refid="where"/>
		</where>
	</select>
	
</mapper> 