<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hurry.data.mapper.goods.GoodsTypeMapper">

	<resultMap id="GoodsTypeResultMap" type="GoodsType" >
		<id property="id" column="id" />
	</resultMap>
	
	<insert id="insertGoodsType" parameterType="GoodsType">
		INSERT INTO goods_type (name,pid)VALUES(#{name},#{pid})
	</insert>

	<update id="updateGoodsType" parameterType="GoodsType">
		UPDATE goods_type SET name=#{name} WHERE id=#{id}
	</update>
	
	<delete id="deleteGoodsType" parameterType="GoodsType">
		DELETE FROM goods_type WHERE id = #{id}
	</delete>
	
	<select id="selectGoodsTypeById" parameterType="int" resultMap="GoodsTypeResultMap">
		SELECT * FROM goods_type WHERE id = #{id}
	</select>
	
	<select id="selectGoodsTypeByMap" parameterType="map" resultMap="GoodsTypeResultMap">
		SELECT * FROM goods_type 
	</select>
	
</mapper> 