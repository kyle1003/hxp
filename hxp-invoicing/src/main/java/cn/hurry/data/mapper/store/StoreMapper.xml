<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hurry.data.mapper.store.StoreMapper">

	<resultMap id="StoreResultMap" type="Store">
		<id property="id" column="id" />
		<collection property="user" column="userId" ofType="User" select="cn.hurry.data.mapper.user.UserMapper.selectUserById"></collection>
	</resultMap>

	<insert id="insertStore" parameterType="Store">
		INSERT INTO store (name,userId)VALUES(#{name},#{userId})
	</insert>

	<update id="updateStore" parameterType="Store">
		UPDATE store SET name=#{name},userId=#{userId} WHERE id=#{id}
	</update>

	<delete id="deleteStore" parameterType="Store">
		DELETE FROM store WHERE id = #{id}
	</delete>

	<select id="selectStoreById" parameterType="int" resultMap="StoreResultMap">
		SELECT * FROM store WHERE id = #{id}
	</select>

	<select id="selectStoreByMap" parameterType="map" resultMap="StoreResultMap">
		SELECT * FROM store
	</select>
	
</mapper> 