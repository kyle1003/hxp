<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hurry.data.mapper.order.giveback.GiveBackBuyOrderGoodsMapper">

	<resultMap id="GiveBackBuyOrderGoodsResultMap" type="GiveBackBuyOrderGoods">
		<id property="id" column="id" />
		<result property="goodsId" column="goodsId"/>
		<result property="orderId" column="orderId"/>
		<collection property="goods" column="goodsId" ofType="Goods" select="cn.hurry.data.mapper.goods.GoodsMapper.selectGoodsById"></collection>
		<collection property="order" column="orderId" ofType="Order" select="cn.hurry.data.mapper.order.giveback.GiveBackBuyOrderMapper.selectGiveBackBuyOrderById"></collection>
	</resultMap>

	<insert id="insertGiveBackBuyOrderGoods" parameterType="GiveBackBuyOrderGoods">
		INSERT INTO give_back_buy_order_goods (goodsId,orderId,price,number)VALUES(#{goodsId},#{orderId},#{price},#{number})
	</insert>

	<update id="updateGiveBackBuyOrderGoods" parameterType="GiveBackBuyOrderGoods">
		UPDATE give_back_buy_order_goods SET price=#{price},number=#{number} WHERE id=#{id}
	</update>

	<delete id="deleteGiveBackBuyOrderGoods" parameterType="GiveBackBuyOrderGoods">
		DELETE FROM give_back_buy_order_goods WHERE id = #{id}
	</delete>

	<select id="selectGiveBackBuyOrderGoodsById" parameterType="int" resultMap="GiveBackBuyOrderGoodsResultMap">
		SELECT * FROM give_back_buy_order_goods WHERE id = #{id}
	</select>
	
	<select id="selectGiveBackBuyOrderGoodsByOrderId" parameterType="string" resultMap="GiveBackBuyOrderGoodsResultMap">
		SELECT * FROM give_back_buy_order_goods WHERE orderId = #{id}
	</select>

	<select id="selectGiveBackBuyOrderGoodsByMap" parameterType="map" resultMap="GiveBackBuyOrderGoodsResultMap">
		SELECT * FROM give_back_buy_order_goods
	</select>
	
</mapper> 