<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://www.mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<properties resource="MyBatisConfig.properties" />

	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="lazyLoadingEnabled" value="true" />
		<setting name="aggressiveLazyLoading" value="false" />
	</settings>

	<typeAliases>
		<typeAlias type="cn.hurry.data.DbcpDataSourceFactory" alias="DBCP" />
		<!-- 授权信息 -->
		<typeAlias type="cn.hurry.po.authorize.Authorize" alias="Authorize" />
		<!--角色管理 -->
		<typeAlias type="cn.hurry.po.operate.ManagerGroup" alias="ManagerGroup" />
		<!--角色权限绑定管理 -->
		<typeAlias type="cn.hurry.po.operate.OperateGroup" alias="OperateGroup" />
		<!--权限管理 -->
		<typeAlias type="cn.hurry.po.operate.Operate" alias="Operate" />
		
		<!--用户 -->
		<typeAlias type="cn.hurry.po.user.User" alias="User" />
		<!--用户信息 -->
		<typeAlias type="cn.hurry.po.user.UserData" alias="UserData" />
		
		<!-- 商品类别 -->
		<typeAlias type="cn.hurry.po.goods.GoodsType" alias="GoodsType" />
		<!-- 商品-->
		<typeAlias type="cn.hurry.po.goods.Goods" alias="Goods" />
		
		<!-- 规格 -->
		<typeAlias type="cn.hurry.po.unit.Norms" alias="Norms" />
		<!-- 单位-->
		<typeAlias type="cn.hurry.po.unit.Unit" alias="Unit" />
		
		<!-- 仓库-->
		<typeAlias type="cn.hurry.po.store.Store" alias="Store" />
		
		<!-- 订单 -->
		<typeAlias type="cn.hurry.po.order.buy.BuyOrder" alias="BuyOrder" />
		<typeAlias type="cn.hurry.po.order.sell.SellOrder" alias="SellOrder" />
		<typeAlias type="cn.hurry.po.order.giveback.GiveBackBuyOrder" alias="GiveBackBuyOrder" />
		<typeAlias type="cn.hurry.po.order.giveback.GiveBackSellOrder" alias="GiveBackSellOrder" />
		
		<!-- 订单商品 -->
		<typeAlias type="cn.hurry.po.order.buy.BuyOrderGoods" alias="BuyOrderGoods" />
		<typeAlias type="cn.hurry.po.order.sell.SellOrderGoods" alias="SellOrderGoods" />
		<typeAlias type="cn.hurry.po.order.giveback.GiveBackBuyOrderGoods" alias="GiveBackBuyOrderGoods" />
		<typeAlias type="cn.hurry.po.order.giveback.GiveBackSellOrderGoods" alias="GiveBackSellOrderGoods" />
		<!-- 销售详情 -->
		<typeAlias type="cn.hurry.po.order.sell.SellInfo" alias="SellInfo" />
		
		<!-- 盘点 -->
		<typeAlias type="cn.hurry.po.inventory.Inventory" alias="Inventory" />
		<typeAlias type="cn.hurry.po.inventory.InventoryGoods" alias="InventoryGoods" />
		<!-- 库存消耗 -->
		<typeAlias type="cn.hurry.po.loss.Loss" alias="Loss" />
		<!-- 交接班 -->
		<typeAlias type="cn.hurry.po.succession.Succession" alias="Succession" />
		<typeAlias type="cn.hurry.po.succession.SuccessionInfo" alias="SuccessionInfo" />
		
		<!-- 销售退货 -->
		<typeAlias type="cn.hurry.po.order.giveback.GiveBackInfo" alias="GiveBackInfo" />
	</typeAliases>
	<environments default="default">
		<!-- 链接wlps数据库 -->
		<environment id="default">
			<transactionManager type="JDBC" />
			<dataSource type="DBCP">
				<property name="driverClassName" value="${driverClassName}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
				<property name="validationQuery" value="${validationQuery}" />
				<property name="maxActive" value="100" />
				<property name="maxIdle" value="50" />
				<property name="minIdle" value="0" />
				<property name="maxWait" value="-1" />
				<property name="testOnBorrow" value="true" />
				<property name="testOnReturn" value="false" />
				<property name="testWhileIdle" value="true" />
			</dataSource>
		
		</environment>
	</environments>

	<mappers>
		<!-- 授权 -->
		<mapper resource="cn/hurry/data/mapper/authorize/AuthorizeMapper.xml" />
		
		<!--角色管理 -->
		<mapper resource="cn/hurry/data/mapper/operate/ManagerGroupMapper.xml" />
		<!--角色权限绑定管理 -->
		<mapper resource="cn/hurry/data/mapper/operate/OperateGroupMapper.xml" />
		<!--权限管理 -->
		<mapper resource="cn/hurry/data/mapper/operate/OperateMapper.xml" />
		
		<!--用户 -->
		<mapper resource="cn/hurry/data/mapper/user/UserMapper.xml" />
		
		<!--用户信息 -->
		<mapper resource="cn/hurry/data/mapper/user/UserDataMapper.xml" />
		
		
		<!-- 商品类别 -->
		<mapper resource="cn/hurry/data/mapper/goods/GoodsTypeMapper.xml" />
		
		<!-- 商品-->
		<mapper resource="cn/hurry/data/mapper/goods/GoodsMapper.xml" />
		
		<!-- 规格 -->
		<mapper resource="cn/hurry/data/mapper/unit/NormsMapper.xml" />
		
		<!-- 单位-->
		<mapper resource="cn/hurry/data/mapper/unit/UnitMapper.xml" />
		
		<!-- 仓库-->
		<mapper resource="cn/hurry/data/mapper/store/StoreMapper.xml" />
		
		<!-- 订单 -->
		<mapper resource="cn/hurry/data/mapper/order/buy/BuyOrderMapper.xml" />
		
		<mapper resource="cn/hurry/data/mapper/order/giveback/GiveBackBuyOrderMapper.xml" />
		<mapper resource="cn/hurry/data/mapper/order/giveback/GiveBackSellOrderMapper.xml" />
		
		<mapper resource="cn/hurry/data/mapper/order/sell/SellOrderMapper.xml" />
		
		<!-- 订单商品 -->
		<mapper resource="cn/hurry/data/mapper/order/buy/BuyOrderGoodsMapper.xml" />
		
		<mapper resource="cn/hurry/data/mapper/order/giveback/GiveBackBuyOrderGoodsMapper.xml" />
		<mapper resource="cn/hurry/data/mapper/order/giveback/GiveBackSellOrderGoodsMapper.xml" />
		
		<mapper resource="cn/hurry/data/mapper/order/sell/SellOrderGoodsMapper.xml" />
		<!-- 销售详情 -->
		<mapper resource="cn/hurry/data/mapper/order/sell/SellInfoMapper.xml" />
		
		<!-- 销售方案 -->
		<mapper resource="cn/hurry/data/mapper/plan/SellPlanMapper.xml" />
		<!-- 盘点-->
		<mapper resource="cn/hurry/data/mapper/inventory/InventoryMapper.xml" />
		<mapper resource="cn/hurry/data/mapper/inventory/InventoryGoodsMapper.xml" />
		<!-- 库存消耗-->
		<mapper resource="cn/hurry/data/mapper/loss/LossMapper.xml" />
		<!-- 交接班 -->
		<mapper resource="cn/hurry/data/mapper/succession/SuccessionMapper.xml" />
		<mapper resource="cn/hurry/data/mapper/succession/SuccessionInfoMapper.xml" />
		
		<!-- 销售退货 -->
		<mapper resource="cn/hurry/data/mapper/order/giveback/GiveBackInfoMapper.xml" />
		
		<!-- 客户and供应商 -->
		<mapper resource="cn/hurry/data/mapper/crm/ClientInfoMapper.xml" />
		<mapper resource="cn/hurry/data/mapper/crm/SupplierInfoMapper.xml" />
	</mappers>
</configuration>
